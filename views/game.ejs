<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/game.css" />
  </head>
  <body>
    <div class="header">
      <p class="back-button">
        <a href='http://localhost:3000'>&lt</a>
      </p>
      <img class="logo-utama" src="img/game/logo_utama.png" alt="Logo" />
      <p class="rps-text">ROCK PAPER SCISSORS</p>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm-4 player">
          <div class="row">
            <div class="col-12"><h2>PLAYER 1</h2></div>
            <div class="col-12">
              <div id="batu" class="hand">
                <img src="img/game/batu.png" alt="Batu" />
              </div>
            </div>
            <div class="col-12">
              <div id="kertas" class="hand">
                <img src="img/game/kertas.png" alt="Kertas" />
              </div>
            </div>
            <div class="col-12">
              <div id="gunting" class="hand">
                <img src="img/game/gunting.png" alt="Gunting" />
              </div>
            </div>
          </div>
        </div>

        <div
          id="game-result"
          class="col-sm-4 d-flex align-items-center justify-content-center"
        >
          <h1 class="vs-text" style="display: inline">VS</h1>
          <p class="result-win player1-win" style="display: none">
            PLAYER 1<br />WIN
          </p>
          <p class="result-win com-win" style="display: none">COM<br />WIN</p>
          <p class="result-draw game-draw" style="display: none">DRAW</p>
        </div>

        <div class="col-sm-4 com">
          <div class="row">
            <div class="col-12"><h2>COM</h2></div>
            <div class="col-12">
              <div id="com-batu" class="hand">
                <img src="img/game/batu.png" alt="Batu" />
              </div>
            </div>
            <div class="col-12">
              <div id="com-kertas" class="hand">
                <img src="img/game/kertas.png" alt="Kertas" />
              </div>
            </div>
            <div class="col-12">
              <div id="com-gunting" class="hand">
                <img src="img/game/gunting.png" alt="Gunting" />
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <div class="text-center btn_refresh">
            <img src="img/game/refresh.png" alt="Refresh" />
          </div>
        </div>
      </div>
    </div>

    <script src="js/game.js"></script>
  </body>
</html>
